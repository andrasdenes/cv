@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveServer" />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Style="background-color: black;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            @* <RadzenSidebarToggle Click="@(() => ToggleSidebar())" /> *@
            <RadzenLabel Text="Header" />
            <CulturePicker/>
            asd
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar FullHeight="true" @bind-Expanded="@SidebarExpanded">
        <Nav/>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    bool SidebarExpanded = true;

    public void ToggleSidebar()
    {
        SidebarExpanded = !SidebarExpanded;
    }
}
